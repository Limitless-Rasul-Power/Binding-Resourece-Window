<Window x:Class="WpfApp_Step_Ders_15_Aprel.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Step_Ders_15_Aprel"
        mc:Ignorable="d"
        Title="Info" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Model</Label>
            <TextBlock Text="{Binding Car.Model, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
            <Label>Vendor</Label>
            <TextBlock Text="{Binding Car.Vendor, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
            <Label>Year</Label>
            <TextBlock Text="{Binding Car.Year, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
